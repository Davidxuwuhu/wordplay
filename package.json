{
    "name": "wordplay",
    "version": "0.0.1",
    "scripts": {
        "prepare": "svelte-kit sync",
        "check": "svelte-check --tsconfig ./tsconfig.json --watch --ignore .svelte-kit",
        "lint": "eslint .",
        "test": "vitest",
        "test:coverage": "vitest run --coverage",
        "dev": "ulimit -Sn 100000 && vite dev",
        "emu": "firebase use dev && npm run env && firebase emulators:start",
        "env": "cp .env.${GCLOUD_PROJECT:-emulator} .env",
        "build": "npm run env && vite build",
        "preview": "vite preview",
        "stage": "firebase use dev && firebase deploy",
        "release": "firebase use prod && firebase deploy"
    },
    "devDependencies": {
        "@sveltejs/adapter-static": "^2",
        "@sveltejs/kit": "^1",
        "@testing-library/jest-dom": "^5",
        "@testing-library/svelte": "^3",
        "@types/uuid": "^9",
        "@typescript-eslint/eslint-plugin": "^5",
        "@typescript-eslint/parser": "^5",
        "eslint": "^8",
        "eslint-plugin-svelte3": "^4",
        "prettier": "2",
        "prettier-plugin-svelte": "^2",
        "svelte": "^3",
        "svelte-check": "^3",
        "svelte-jester": "^2",
        "svelte-preprocess": "^5",
        "ts-jest": "^29.0",
        "tslib": "^2.5",
        "typescript": "^5",
        "vite": "^4",
        "vitest": "latest"
    },
    "type": "module",
    "dependencies": {
        "colorjs.io": "^0",
        "decimal.js": "^10",
        "firebase": "^9",
        "uuid": "^9"
    }
}
