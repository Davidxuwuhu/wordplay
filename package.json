{
    "name": "wordplay",
    "version": "0.0.1",
    "scripts": {
        "prepare": "svelte-kit sync",
        "check": "svelte-check --tsconfig ./tsconfig.json --watch --ignore .svelte-kit",
        "lint": "eslint .",
        "test": "vitest",
        "test:coverage": "vitest run --coverage",
        "dev": "vite dev",
        "emu": "firebase use dev && npm run env && firebase emulators:start",
        "env": "cp .env.${GCLOUD_PROJECT:-emulator} .env",
        "build": "npm run env && vite build",
        "preview": "vite preview",
        "stage": "firebase use dev && firebase deploy",
        "release": "firebase use prod && firebase deploy",
        "tutorial-schema": "npx ts-json-schema-generator --tsconfig tsconfig.json --path 'src/tutorial/Tutorial.ts' --type 'Tutorial' --out static/schemas/Tutorial.json",
        "locale-schema": "npx ts-json-schema-generator --tsconfig tsconfig.json --path 'src/locale/Locale.ts' --type 'Locale' --out static/schemas/Locale.json",
        "schemas": "npm run tutorial-schema && npm run locale-schema",
        "verify-locales": "npx tsx verify-locales.ts",
        "locales": "npm-watch verify-locales"
    },
    "watch": {
        "verify-locales": {
            "patterns": [
                "static/locales",
                "verify-locales.ts"
            ],
            "extensions": "json,ts",
            "quiet": true
        }
    },
    "devDependencies": {
        "@sveltejs/adapter-static": "^2",
        "@sveltejs/kit": "^1",
        "@testing-library/jest-dom": "^5",
        "@testing-library/svelte": "^4",
        "@types/uuid": "^9",
        "@typescript-eslint/eslint-plugin": "^5",
        "@typescript-eslint/parser": "^5",
        "ajv": "^8",
        "chalk": "^5.3.0",
        "eslint": "^8",
        "eslint-plugin-svelte": "^2.32.2",
        "npm-watch": "^0.11.0",
        "prettier": "2",
        "prettier-plugin-svelte": "^2",
        "svelte": "^4",
        "svelte-check": "^3",
        "svelte-jester": "^2",
        "svelte-preprocess": "^5",
        "ts-jest": "^29.1",
        "tslib": "^2.6",
        "tsx": "^3.12.7",
        "typescript": "^5",
        "vite": "^4.4.0",
        "vitest": "^0"
    },
    "type": "module",
    "dependencies": {
        "colorjs.io": "^0",
        "decimal.js": "^10",
        "firebase": "^9",
        "uuid": "^9"
    }
}
