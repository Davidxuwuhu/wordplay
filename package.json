{
    "name": "wordplay",
    "version": "0.0.1",
    "scripts": {
        "prepare": "svelte-kit sync",
        "check": "svelte-check --tsconfig ./tsconfig.json --watch --ignore .svelte-kit",
        "lint": "eslint .",
        "test": "vitest",
        "test:coverage": "vitest run --coverage",
        "dev": "vite dev",
        "emu": "firebase use dev && npm run env && firebase emulators:start",
        "env": "cp .env.${GCLOUD_PROJECT:-emulator} .env",
        "build": "npm run env && vite build",
        "preview": "vite preview",
        "stage": "firebase use dev && firebase deploy",
        "release": "firebase use prod && firebase deploy"
    },
    "devDependencies": {
        "@sveltejs/adapter-static": "^2.0",
        "@sveltejs/kit": "^1.15",
        "@testing-library/jest-dom": "^5.16",
        "@testing-library/svelte": "^3.2",
        "@types/uuid": "^9.0",
        "@typescript-eslint/eslint-plugin": "^5.54",
        "@typescript-eslint/parser": "^5.54",
        "eslint": "^8.35.0",
        "eslint-plugin-svelte3": "^4.0.0",
        "prettier": "2.8.4",
        "prettier-plugin-svelte": "^2.9.0",
        "svelte": "^3.58",
        "svelte-check": "^3.1",
        "svelte-jester": "^2.3",
        "svelte-preprocess": "^5.0",
        "ts-jest": "^29.0",
        "tslib": "^2.5",
        "typescript": "^5.0",
        "vite": "^4.2",
        "vitest": "latest"
    },
    "type": "module",
    "dependencies": {
        "colorjs.io": "^0.4.3",
        "decimal.js": "^10.4.3",
        "firebase": "^9.18.0",
        "uuid": "^9.0.0"
    }
}
