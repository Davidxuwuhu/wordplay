{
    "extends": "./.svelte-kit/tsconfig.json",
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "baseUrl": "src",
        "paths": {
            "@components/*": ["components/*"],
            "@nodes/*": ["nodes/*"],
            "@runtime/*": ["runtime/*"],
            "@conflicts/*": ["conflicts/*"],
            "@translation/*": ["translation/*"],
            "@concepts/*": ["concepts/*"]
        }
    }
}
